// Defaults which you can freely override
$column-width = 60px
$gutter-width = 20px
$columns = 12

// Utility function â€” you should never need to modify this

gridsystem-width($columns = $columns)
  $column-width * $columns + $gutter-width * $columns

// Set $total-width to 100% for a fluid layout

$total-width = 100%

clearfix()
  *zoom: 1
  &:before,
	&:after
    display: table
    content: ''
    line-height: 0
  &:after
    clear: both

//////////
// GRID //
//////////

body
  width: 100%
  clearfix()

row()
  display: block
  width: 100%
  margin: 0 auto
  clearfix()

column($x, $columns = $columns)
  display: inline-block
  float: left
  width: ($total-width / $columns * $x)
  padding-left: ($total-width * $gutter-width * 0.5 / gridsystem-width($columns))
  padding-right: ($total-width * $gutter-width * 0.5 / gridsystem-width($columns))

push($offset = 1)
  margin-left: ($total-width / $columns * $offset)

pull($offset = 1)
  margin-right: ($total-width / $columns * $offset)
  
clearfix()
  *zoom: 1
  &:before,
	&:after
    display: table
    content: ''
    line-height: 0
  &:after
    clear: both